{{! muestra todas las notas de la db }}

<div class="row"> {{!Crea una fila }}
    {{#each notes}} {{! para el arreglo de notas va a empezar a recorrerlo }}
        <div class="col-md-3"> {{! genera columnas de 3 }}
            <div class="card"> {{! tarjeta }}
                <div class="card-body">
                    <h4 class="card-title d-flex justify-content-between align-items-center">
                        {{title}} {{!<a href="/notes/edit/{{_id}}{{!"><i class="fas fa-edit"></i></a>}} {{! Titulo de la nota }}
                    </h4>
                    <p>{{description}}</p> {{! descripcion de la anota }}
                    <p>{{date}}</p> {{! descripcion de la anota }}
                    <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST"> {{! Envia a la ruta /notes/delete/_id a travez del metodo POST}}
                      <input type="hidden" name="_method" value="DELETE"> {{! input de tipo oculto}}
                        <button type="submit" class="btn btn-danger btn-block btn-sm">Delete</button> {{! Boton para eliminar nota }}
                    </form>
                </div>
            </div>
        </div>
    {{else}} {{! si no existen notas crea una tarjeta }}
      <div class="card mx-auto">
          <div class="card-body">
              <h1>Hola {{user.name}}</h1> {{! Muestra el nombre del usuario desde la variable user }}
              <p class="lead">No tienes notas aun</p> {{! Muestra mensaje }}
              <a href="/notes/add" class="btn btn-success btn-block">Crea una nota</a> {{! Redirecciona a la ruta para agregar notas }}
          </div>
      </div>
    {{/each}}
</div>